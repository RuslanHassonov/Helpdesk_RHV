<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.helpdesk.user_interface.windows.NewTicketWin">

    <children>
        <Pane prefHeight="90.0" prefWidth="600.0" style="-fx-background-color: #5579b2;" stylesheets="@../css/style.css"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <effect>
                <DropShadow color="#00000045"/>
            </effect>
            <children>
                <Label layoutX="14.0" layoutY="26.0" text="New Ticket" textFill="#ededed">
                    <font>
                        <Font name="Segoe UI" size="32.0"/>
                    </font>
                    <graphic>
                        <ImageView fitHeight="33.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/sharp_view_list_white_24dpx2.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Label>
                <Pane disable="true" layoutX="350.0" layoutY="-228.0" opacity="0.26" prefHeight="326.0"
                      prefWidth="198.0" rotate="-67.0" snapToPixel="false"
                      style="-fx-background-color: #385076; -fx-background-radius: 25;"/>
                <Pane centerShape="false" disable="true" layoutX="361.0" layoutY="-168.0" opacity="0.29"
                      prefHeight="236.0" prefWidth="205.0" rotate="-67.0" snapToPixel="false"
                      style="-fx-background-color: #385076; -fx-background-radius: 25;"/>
            </children>
        </Pane>
        <GridPane alignment="CENTER_LEFT" layoutX="78.0" layoutY="90.0" prefHeight="245.0" prefWidth="444.0"
                  AnchorPane.bottomAnchor="65.0" AnchorPane.leftAnchor="78.0" AnchorPane.rightAnchor="78.0"
                  AnchorPane.topAnchor="90.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="255.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="333.0" minWidth="10.0" prefWidth="266.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Customer:">
                    <font>
                        <Font name="Segoe UI" size="15.0"/>
                    </font>
                </Label>
                <Label text="Priority:" GridPane.rowIndex="1">
                    <font>
                        <Font name="Segoe UI" size="15.0"/>
                    </font>
                </Label>
                <Label text="Status:" GridPane.rowIndex="2">
                    <font>
                        <Font name="Segoe UI" size="15.0"/>
                    </font>
                </Label>
                <TextField fx:id="tf_ticketCustId" prefHeight="30.0" prefWidth="271.0" GridPane.columnIndex="1"/>
                <Label text="Assigned To:" GridPane.rowIndex="3">
                    <font>
                        <Font name="Segoe UI" size="15.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cb_ticketStatus" prefHeight="25.0" prefWidth="160.0" promptText="Choose Status..."
                          visibleRowCount="5" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <ComboBox fx:id="cb_ticketPrior" prefHeight="25.0" prefWidth="160.0" promptText="Choose Priority..."
                          visibleRowCount="5" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cb_ticketTechnician" prefHeight="25.0" prefWidth="160.0"
                          promptText="Choose Technician..." visibleRowCount="5" GridPane.columnIndex="1"
                          GridPane.rowIndex="3"/>
            </children>
            <padding>
                <Insets top="20.0"/>
            </padding>
        </GridPane>
        <HBox layoutX="426.0" layoutY="351.0" spacing="5.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="426.0"
              AnchorPane.rightAnchor="29.0" AnchorPane.topAnchor="351.0">
            <children>
                <Button fx:id="btn_NewTicketConfirm" mnemonicParsing="false" onAction="#confirmButtonPressed"
                        prefHeight="35.0" prefWidth="70.0" styleClass="crudBtn" stylesheets="@../css/style.css"
                        text="Confirm">
                    <font>
                        <Font name="Segoe UI" size="12.0"/>
                    </font>
                </Button>
                <Button fx:id="btn_NewTicketCancel" mnemonicParsing="false" onAction="#cancelButtonPressed"
                        prefHeight="35.0" prefWidth="70.0" styleClass="crudBtn" stylesheets="@../css/style.css"
                        text="Cancel">
                    <font>
                        <Font name="Segoe UI" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>

</AnchorPane>
